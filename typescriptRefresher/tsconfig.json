{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "ES2020",
        "jsx": "react",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "sourceMap": true,
        "lib": ["ES2020", "DOM"]  // Add "DOM" here
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}
